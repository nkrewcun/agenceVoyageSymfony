{% extends 'user_connected_base.html.twig' %}

{% block title %}Modifier une activité{% endblock %}

{% block body %}
    <div class="container">
        <h2>Modifier l'activité {{ activite.nom }}</h2>
        {{ form_start(form) }}

        <div class="form-group">
            {{ form_label(form.nom) }}
            {{ form_widget(form.nom) }}
            {{ form_errors(form.nom) }}
        </div>
        <div class="form-group">
            {{ form_label(form.image) }}
            {{ form_widget(form.image) }}
            {{ form_errors(form.image) }}
            {% if originalImage %}
                <img src="{{ asset('uploads/images/' ~ originalImage) }}" alt="{{ activite.nom }}">
            {% endif %}
        </div>
        {{ form_widget(form.submit) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
